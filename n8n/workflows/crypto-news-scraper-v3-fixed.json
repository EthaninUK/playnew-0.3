      "name": "Fetch Cointelegraph RSS",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 3,
      "position": [650, 300],
      "id": "fetch-1"
    },
    {
      "parameters": {
        "functionCode": "// Parse RSS XML and extract articles\nconst items = $input.all();\nconst cleanedData = [];\n\nfor (const item of items) {\n  const xmlData = item.json;\n  \n  // Simple RSS parsing - n8n should auto-parse XML\n  // If it's a string, we need to parse it\n  let parsedData;\n  if (typeof xmlData === 'string') {\n    // n8n usually handles this automatically\n    continue;\n  }\n  \n  // Extract RSS items\n  const rssItems = xmlData.rss?.channel?.item || xmlData.channel?.item || xmlData.item || [];\n  const itemsArray = Array.isArray(rssItems) ? rssItems : [rssItems];\n  \n  for (const rssItem of itemsArray) {\n    const entry = {\n      title: rssItem.title || '',\n      content: rssItem.description || rssItem['content:encoded'] || rssItem.content || '',\n      link: rssItem.link || '',\n      source: 'Cointelegraph',\n      published_at: rssItem.pubDate || rssItem.published || new Date().toISOString(),\n      category: rssItem.category || '',\n      raw_data: rssItem\n    };\n    \n    // Filter conditions\n    const wordCount = entry.content.split(' ').length;\n    const publishedDate = new Date(entry.published_at);\n    const oneDayAgo = new Date(Date.now() - 24 * 60 * 60 * 1000);\n    const isRecent = publishedDate > oneDayAgo;\n    \n    if (wordCount > 30 && isRecent && entry.title) {\n      cleanedData.push({ json: entry });\n    }\n  }\n}\n\nconsole.log(`✅ Extracted ${cleanedData.length} articles from RSS feed`);\nreturn cleanedData;"
      },
      "name": "Parse RSS Data",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [850, 300],
      "id": "parse-1"
    },
    {
      "parameters": {
        "batchSize": 3,
        "options": {}
      },
      "name": "Split In Batches",
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 3,
      "position": [1050, 300],
      "id": "split-1"
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.content }}",
              "operation": "isNotEmpty"
            },
            {
              "value1": "={{ $json.title }}",
              "operation": "isNotEmpty"
            }
          ],
          "number": [
